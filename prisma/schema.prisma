

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id         Int       @id @default(autoincrement())
  name       String    @db.VarChar(100)
  lastname       String    @db.VarChar(100)
  usuario      String    @unique(map: "user") @db.VarChar(255)
  password   String    @db.VarChar(255)
  created_at DateTime? @default(now()) @db.Timestamp(0)
  canciones  canciones[]  // Relación uno a muchos con canciones
}


model canciones {
  id         Int       @id @default(autoincrement())
  nombre     String
  artista    String
  categorias categorias? @relation(fields:[categoriaId], references:[id], onDelete:SetNull)
  categoriaId Int?
  status     String
  createdAt  DateTime  @default(now())
  userId     Int       // Clave foránea hacia el modelo users
  user       users     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  
}

model categorias {
  id         Int       @id @default(autoincrement())
  nombre     String
  canciones canciones[]
}