generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model role {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(100) @unique
  User User[] // Relación uno a muchos
}

model User {
  id         Int       @id @default(autoincrement())
  name       String    @db.VarChar(100)
  lastname   String    @db.VarChar(100)
  username   String    @unique(map: "user") @db.VarChar(255)
  password   String    @db.VarChar(255)
  roleId     Int
  avatar     String?   @default("/avatars/default-avatar.jpg") // Establecer valor predeterminado
  role       role      @relation(fields: [roleId], references: [id])
  created_at DateTime? @default(now()) @db.Timestamp(0)
  Songs      Songs[]   // Relación uno a muchos con Songs
  Image      Image[]   // Relación uno a muchos con imágenes
  Music      Music[]   // Relación uno a muchos con Musics
  Playlists  Playlist[] // Relación con playlists
}


model Songs {
  id          Int           @id @default(autoincrement())
  title       String
  categories  categories?   @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  categoryId  Int?
  validate      Boolean?
  createdAt   DateTime       @default(now())
  userId      Int            // Clave foránea hacia el modelo User
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  Image       Image[]        // Relación uno a muchos con imágenes
  Music       Music[]        // Relación uno a muchos con Musics
  Playlists   Playlist[]     @relation("PlaylistSongs") // Relación muchos a muchos
}

model categories { 
  id    Int     @id @default(autoincrement())
  name  String
  Songs Songs[]
}

model Image {
  id       Int      @id @default(autoincrement())
  fileName String   @db.VarChar(255)
  songId   Int
  userId   Int
  song     Songs    @relation(fields: [songId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Music {
  id       Int      @id @default(autoincrement()) 
  fileName String   @db.VarChar(255)
  songId   Int
  userId   Int
  song     Songs    @relation(fields: [songId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Playlist {
  id      Int      @id @default(autoincrement())
  name    String   @db.VarChar(255)
  userId  Int      // Clave foránea hacia el modelo User
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  Songs   Songs[]  @relation("PlaylistSongs")
}

